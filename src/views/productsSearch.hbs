
<link rel="stylesheet" type="text/css" href="/css/products.css">

<h1>Productos - Buscar</h1>

<form method="get" action="/api/products/productsSearchView">
    <input type="text" placeholder="ID" name="pid" required>
    <input type="submit" value="Buscar">
</form>

<div class="products-view-div">
    {{#if product}}
        <div class="product-view-div">
            <div class="product-title-div">
                <h3>{{this.product.title}}</h3>
                <button class="button-extend">+</button>
            </div>
            <hr>
            <p>Descripcion: {{this.product.description}}</p>
            <p>Codigo: {{this.product.code}}</p>
            <p class="element-hidden">Precio: ${{this.product.price}}</p>
            <p class="element-hidden">Stock: {{this.product.stock}} unidades</p>
            <p class="element-hidden">Categoria: {{this.product.category}}</p>
            <p class="element-hidden">Imagen: {{this.product.thumbnail}}</p>
        </div>  
        <form method="post" action="/api/carts/productAdd/{{this.product._id}}">
            <input type="submit" value="AÃ±adir al carrito">
        </form>
    {{/if}}

    <p style="color: red">{{error}}</p>
</div>

<script src="/js/products.js"></script>
